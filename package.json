{
  "name": "load-balanced-hash-service",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build:ts": "tsc",
    "lint:format": "npx prettier --write",
    "prepare": "husky",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit"
  },
  "dependencies": {
    "argon2": "^0.41.1",
    "express": "^4.21.2",
    "pino": "^9.6.0",
    "pm2": "^6.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.10",
    "autocannon": "^8.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    "*.{ts,json,md}": "pnpm lint:format"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "build",
          "ci",
          "chore",
          "revert"
        ]
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ],
      "body-max-line-length": [
        2,
        "always",
        100
      ]
    }
  },
  "license": "MIT"
}
